#Enable vi mode
bindkey -v

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export CLICOLOR=1

autoload -Uz compinit && compinit
autoload -U promptinit && promptinit
prompt pure

export HISTSIZE=5000               #How many lines of history to keep in memory
export HISTFILE=~/.zsh_history     #Where to save history to disk
export SAVEHIST=5000               #Number of history entries to save to disk


fpath=(/usr/local/share/zsh-completions $fpath)
. $(brew --prefix)/share/zsh/site-functions


export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

eval "$(fasd --init auto )"
eval "$(rbenv init -)"

#GIT
alias gs='git status'
alias gcm='git commit -m'
alias ga='git add'
alias gl='git log --oneline --graph'
alias gco='git checkout'
alias glc='git shortlog -s -n'
alias gcf='git checkout $(git branch | cut -c 3- | fzf)'
alias rf='rake $(rake -T | cut -f2 -d' ' | fzf)'

#SYSTEM
alias python='python3'
alias vim='/usr/local/bin/vim'
alias _='sudo'
alias gz='tar -zcvf' #tar a folder
alias ll='ls -lahGF'

#RAILS
alias be='bundle exec'

#FASD
alias a='fasd -a'        # any
alias s='fasd -si'       # show / search / select
alias d='fasd -d'        # directory
alias f='fasd -f'        # file
alias sd='fasd -sid'     # interactive directory selection
alias sf='fasd -sif'     # interactive file selection
alias z='fasd_cd -d'     # cd, same functionality as j in autojump
alias zz='fasd_cd -d -i' # cd with interactive selection

#IMPORT FILES
[ -f ~/.zsh_profile ] && source ~/.zsh_profile
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
